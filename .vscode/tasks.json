{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "go",
            "args": [
                "build",
                "-o",
                "porkbun-ssl.exe",
                "."
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$go"
            ],
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            }
        },
        {
            "label": "docker build",
            "type": "shell",
            "command": "docker",
            "args": [
                "build",
                "-t",
                "porkbun-ssl:latest",
                "."
            ],
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "docker run",
            "type": "shell",
            "command": "docker",
            "args": [
                "run",
                "--rm",
                "--env-file",
                ".env",
                "-v",
                "${workspaceFolder}/certs:/certs",
                "porkbun-ssl:latest"
            ],
            "group": "test",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "go mod tidy",
            "type": "shell",
            "command": "go",
            "args": [
                "mod",
                "tidy"
            ],
            "problemMatcher": [
                "$go"
            ],
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            }
        }
    ]
}
